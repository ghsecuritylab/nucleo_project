void which_diag(int column) {
	int line = (NOMBRE_LIGNE) - jeton_de_colonne[NOMBRE_COLONNE];

	switch (column) {
	case 0:
		switch (line) {
		case 0:
			//3 -
			break;
		case 1:
			//2 -
			break;
		case 2:
			//1 -
			break;
		case 3:
			//- 7
			break;
		case 4:
			//- 8
			break;
		case 5:
			//- 9
			break;
		}
		break;
	case 1:
		switch (line) {
		case 0:
			//4 -
			break;
		case 1:
			//3 -
			break;
		case 2:
			//2 7
			break;
		case 3:
			//1 8
			break;
		case 4:
			//- 9
			break;
		case 5:
			//- 10
			break;
		}
		break;
	case 2:
		switch (line) {
		case 0:
			//5 -
			break;
		case 1:
			//4 7
			break;
		case 2:
			//3 8
			break;
		case 3:
			//2 9
			break;
		case 4:
			//1 10
			break;
		case 5:
			//- 11
			break;
		}
		break;
	case 3:
		switch (line) {
		case 0:
			//6 7
			break;
		case 1:
			//5 8
			break;
		case 2:
			//4 9
			break;
		case 3:
			//3 10
			break;
		case 4:
			//2 11
			break;
		case 5:
			//1 12
			break;
		}
		break;
	case 4:
		switch (line) {
		case 0:
			//- 8
			break;
		case 1:
			//6 9
			break;
		case 2:
			//5 10
			break;
		case 3:
			//4 11
			break;
		case 4:
			//3 12
			break;
		case 5:
			//2 -
			break;
		}
		break;
	case 5:
		switch (line) {
		case 0:
			//- 9
			break;
		case 1:
			//- 10
			break;
		case 2:
			//6 11
			break;
		case 3:
			//5 12
			break;
		case 4:
			//4 -
			break;
		case 5:
			//3 -
			break;
		}
		break;
	case 6:
		switch (line) {
		case 0:
			//- 10
			break;
		case 1:
			//- 11
			break;
		case 2:
			//- 12
			break;
		case 3:
			//6 -
			break;
		case 4:
			//5 -
			break;
		case 5:
			//4 -
			break;
		}
		break;
	}
}